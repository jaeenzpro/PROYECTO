    <style>
    :root{
      --naranja: #FF8C00;      /* Color principal: Naranja Vibrante */
      --crema: #fffdd0;        /* Color secundario claro */
      --negro: #000000;        /* Color oscuro */
    }
    body{ background:#f6f7fb; font-family: sans-serif; }

    /* Marca "Krochicken" */
    .logo-multi span{
      display:inline-block;
      padding:0 .35rem;
      text-transform:uppercase;
      font-weight:800;
      letter-spacing:.5px;
    }
    .logo-multi .multi{ background:var(--negro); color:#ffffff; }
    .logo-multi .vinos{ background:var(--naranja); color:var(--negro); }

    /* Hero carousel */
    .hero-caption{
      backdrop-filter: blur(2px);
      background: rgba(0,0,0,.5);
      border-radius: 1rem;
      padding: 1.25rem 1.5rem;
    }
    .btn-vino{ background:var(--naranja); color:var(--negro); border:none; font-weight:700; }
    .btn-vino:hover{ filter:brightness(1.15); color:var(--negro); }

    /* Fichas de valor (check, envío, etc.) */
    .feature-tile{
      padding:28px; background:#ffffff; border-radius:18px;
      transition: transform .2s ease; box-shadow:0 8px 15px rgba(0,0,0,.04);
    }
    .feature-tile:hover{ transform: translateY(-2px); }
    .feature-tile i{ color:var(--naranja); }

    /* Buscador superior */
    .search-wrap{ background:#ffffff; border-radius:999px; box-shadow:0 8px 20px rgba(0,0,0,.04); }
    .search-wrap input{ border:0; outline:0; box-shadow:none; }
    .search-wrap .input-group-text{ background:transparent; border:0; color:#666; }

    /* Cards de producto */
    .product-card{ border:0; border-radius:22px; overflow:hidden; box-shadow:0 10px 24px rgba(0,0,0,.06); background:#ffffff; }
    .product-card .card-img-top{ height:200px; object-fit:cover; }
    .price{ color:var(--naranja); font-size:1.25rem; font-weight:800; }
    .add-cart{ border-radius:14px; background:var(--naranja); border:1px solid var(--naranja); color:var(--negro); font-weight:600; }
    .add-cart:hover{ background:var(--negro); border-color:var(--negro); color:#fff; }

    /* Ticker (se mantiene) */
    .brand-ticker{
      overflow:hidden; position:relative; background:#ffffff; border-radius:20px; box-shadow:0 8px 20px rgba(0,0,0,.05);
    }
    /* Etiquetas decorativas */
    .badge-vino{ background:var(--naranja); color:var(--negro); }

    /* --- EXTENSIONES NUEVAS --- */
    .product-card .card-head{ background:var(--negro); color:#fff; font-weight:600; text-align:center; padding:.55rem; }
    /* Transiciones de acción para destacar */
    .product-card .card-actions{ position:absolute; top:48%; left:50%; transform:translate(-50%,-50%); display:flex; gap:.5rem; opacity:0; transition:.2s; }
    .product-card:hover .card-actions{ opacity:1; }
    .product-card .icon-btn{ width:38px; height:38px; display:grid; place-items:center; border-radius:8px; border:2px solid #fff; background:rgba(255,140,0,.95); color:#fff; }
    .product-card .icon-btn:hover{ background:var(--negro); }
    .section-title{ font-weight:800; letter-spacing:1px; }
    .section-toolbar .nav-btn{ border:1px solid #dce1e7; width:34px; height:34px; display:grid; place-items:center; border-radius:8px; background:#fff; color:var(--naranja); }
    .testimonial{ background:#fff; border-radius:18px; box-shadow:0 10px 24px rgba(0,0,0,.06); padding:16px; }
    .testimonial img{ width:84px; height:84px; object-fit:cover; border-radius:50%; }
    .footer-col h6{ font-weight:800; color:var(--naranja); }
    .pay-logos img{ height:22px; margin-right:10px; opacity:.9; }
    #toTop{ position:fixed; right:16px; bottom:16px; width:40px; height:40px; border-radius:10px; display:none; place-items:center; background:var(--naranja); color:var(--negro); z-index:1000; }
    @keyframes scrollBrands{
      0%   { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
  </style>
</head>

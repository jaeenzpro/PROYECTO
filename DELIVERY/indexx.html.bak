    <script>
    // Año en footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Filtrado por buscador (desktop + mobile)
    function applyFilter(value){
      const q = value.toLowerCase().trim();
      document.querySelectorAll('#productGrid .product-item').forEach(card => {
        // Buscamos en el atributo data-name que contiene palabras clave
        const name = (card.getAttribute('data-name') || '').toLowerCase();
        card.style.display = name.includes(q) ? 'block' : 'none'; // Usar 'block' para las columnas de Bootstrap
      });
    }
    const searchInput = document.getElementById('searchInput');
    const searchInputMobile = document.getElementById('searchInputMobile');
    if (searchInput) searchInput.addEventListener('input', e=>applyFilter(e.target.value));
    if (searchInputMobile) searchInputMobile.addEventListener('input', e=>applyFilter(e.target.value));

    // Simulación de agregar al carrito (para botones .add-cart y .add-cart-featured)
    document.querySelectorAll('.add-cart, .add-cart-featured').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        // Guardamos el texto original para restaurarlo
        const originalHTML = btn.innerHTML;
        const originalClasses = btn.className;

        // Animación de éxito
        btn.classList.add('disabled', 'btn-success');
        btn.classList.remove('btn-vino', 'btn-primary');
        btn.innerHTML = '<i class="fas fa-check me-1"></i>¡Agregado!';

        // Restaurar después de 1.5 segundos
        setTimeout(()=>{
          btn.className = originalClasses; // Restaurar todas las clases originales
          btn.innerHTML = originalHTML;
        }, 1500);
      })
    })

    // Back to top
    const toTop=document.getElementById('toTop');
    if(toTop){
      window.addEventListener('scroll',()=>{ toTop.style.display = window.scrollY>400 ? 'grid' : 'none'; });
      toTop.addEventListener('click',()=>window.scrollTo({top:0,behavior:'smooth'}));
    }
  </script>

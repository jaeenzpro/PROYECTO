  <!-- Recargar la página cada 10 segundos para ver cambios en tiempo real -->
  <meta http-equiv="refresh" content="10">
</head>
<body>

<div class="container py-5">
  <h2 class="text-center fw-bold mb-4">
    <i class="bi bi-truck me-2"></i> Estado de Pedidos de Delivery
  </h2>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle text-center bg-white shadow-sm">
      <thead class="table-warning">
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th>Repartidor</th>
          <th>Vehículo</th>
          <th>Fecha</th>
          <th>Método de Pago</th>
          <th>Total (S/)</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <?php
        if ($resultado->num_rows > 0) {
          while ($fila = $resultado->fetch_assoc()) {

            // Color según el estado
            switch ($fila['estado']) {
              case 'Pendiente':
                $badge = 'secondary';
                break;
              case 'En preparación':
                $badge = 'info';
                break;
              case 'En camino':
                $badge = 'warning';
                break;
              case 'Entregado':
                $badge = 'success';
                break;
              default:
                $badge = 'dark';
            }

            echo "<tr>
                    <td>{$fila['id_orden']}</td>
                    <td>{$fila['nombre_cliente']}</td>
                    <td>{$fila['telefono_cliente']}</td>
                    <td>{$fila['direccion_cliente']}</td>
                    <td>{$fila['repartidor']}</td>
                    <td>{$fila['vehiculo']}</td>
                    <td>{$fila['fecha_orden']}</td>
                    <td>{$fila['metodo_pago']}</td>
                    <td>{$fila['total']}</td>
                    <td><span class='badge bg-$badge px-3 py-2'>{$fila['estado']}</span></td>
                  </tr>";
          }
        } else {
          echo "<tr><td colspan='10' class='text-muted text-center'>No hay pedidos registrados.</td></tr>";
        }
        ?>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
